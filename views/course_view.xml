<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Instructor Tree ,Form & Action View       -->
        <record id="view_instructor_info_tree" model="ir.ui.view">
            <field name="name">instructor.info.tree</field>
            <field name="model">instructor.info</field>
            <field name="arch" type="xml">
                <tree string="Instructor">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="view_instructor_info_form" model="ir.ui.view">
            <field name="name">instructor.info.form</field>
            <field name="model">instructor.info</field>
            <field name="arch" type="xml" >
                <form string="Instructor">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="action_instructor_info" model="ir.actions.act_window">
            <field name="name">Instructor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">instructor.info</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_instructor_info_tree"/>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Course Tree ,Form & Action View       -->
        <record id="view_course_info_tree" model="ir.ui.view">
            <field name="name">course.info.tree</field>
            <field name="model">course.info</field>
            <field name="arch" type="xml">
                <tree string="Course">
                    <field name="name" />
                    <field name="date" />
                    <field name="instructor_id" />
                    <field name="rooms_id" />
                </tree>
            </field>
        </record>

        <record id="view_course_info_form" model="ir.ui.view">
            <field name="name">course.info.form</field>
            <field name="model">course.info</field>
            <field name="arch" type="xml" >
                <form string="Course">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="instructor_id" options="{'no_open':True, 'no_create_edit': True}"/>
                            <field name="rooms_id" domain="[('state','=','confirm')]" options="{'no_open':True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="date" />
                            <field name="lessons_ids" widget="many2many_tags" force_save="1" options="{'no_open':True, 'no_create_edit': True}" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendees">
                            <field name="attendees_lines" >
                                <tree string="Attendees Lines" editable="bottom">
                                    <field name="attendees_name_id" required="1" options="{'no_open':True, 'no_create_edit': True}"/>
                                </tree>
                                <form string="Attendees Lines">
                                    <group>
                                        <field name="attendees_name_id" required="1" options="{'no_open':True, 'no_create_edit': True}"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="action_course_info" model="ir.actions.act_window">
            <field name="name">Course</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">course.info</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_course_info_tree"/>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>